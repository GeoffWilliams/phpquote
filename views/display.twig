{% extends "base.twig" %}

{% block content %}
<script type="text/javascript">
 $(document).ready(function() {
    $('#delete_action').click(function(){
    $.ajax({
      type: "DELETE",
      url: window.location.href ,
      success: function(data){
        document.open("text/html", "replace");
        document.write(data);
        document.close();
      }
    });
  });
});
</script>

  <div class="card_box">
    <h1>{{ quote }}</h1>
    {{ author }}, {{ ts }}
    <div class="button_box">
      <a href="#" class="myButton" onclick="window.location.href='/quote/random'">Random</a>
    </div>
  </div>
  <div id="delete_box">
    <img id="delete_action" src="/res/image/delete.jpg" alt="delete" class="fuzzy" />
  </div
{% endblock %}
